using System;
using MultiToolLibrary;

namespace ConsoleApp
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.OutputEncoding = System.Text.Encoding.UTF8;
            Console.WriteLine("=== CHƯƠNG TRÌNH TÍNH TOÁN (SỬ DỤNG DLL) ===");

            Console.Write("Nhập a = ");
            int a = int.Parse(Console.ReadLine());

            Console.Write("Nhập b = ");
            int b = int.Parse(Console.ReadLine());

            Console.WriteLine($"Tổng: {MathTool.Tong(a, b)}");
            Console.WriteLine($"Hiệu: {MathTool.Hieu(a, b)}");
            Console.WriteLine($"Tích: {MathTool.Nhan(a, b)}");
            Console.WriteLine($"Thương: {MathTool.Chia(a, b)}");
            Console.ReadKey();
        }
    }
}
